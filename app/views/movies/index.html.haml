-#  This file is app/views/movies/index.html.haml
%h1 All Movies
= form_tag movies_path, :method => :get do
  Include:
  - @all_ratings.each do |rating|
    = rating
    - is_check = @rating_options.key?(rating) unless @rating_options.nil?
    = check_box_tag "ratings[#{rating}]", "1", is_check
  = submit_tag 'Refresh'
%table#movies
  %thead
    %tr
      %th#title_header{class: (if @clicked_column == "title" then "hilite" end)}
        = link_to "Movie Title", movies_path(:sort => "title")
      %th Rating
      %th#release_date_header{class: (if @clicked_column == "release_date" then "hilite" end)}
        = link_to "Release Date", movies_path(:sort => "release_date")
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
